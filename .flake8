[flake8]
max-line-length = 100
extend-ignore =
    E203,
    W503,
    D202,
    D401,
    I100,
    I201
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    htmlcov,
    *.egg-info,
    build,
    dist,
    .venv,
    venv
per-file-ignores =
    tests/*:F401,F811
    */__init__.py:F401
